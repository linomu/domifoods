<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/colorPrimary"
    android:gravity="center"
    android:padding="10dp"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="223dp"
        app:srcCompat="@drawable/ic_deliveryman"

        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="411dp"
        android:layout_height="15dp"
        android:layout_weight="2"
        android:background="#F61004"
        android:fontFamily="@font/comickings"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:padding="10dp"
        android:text="DOMIFOODS"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_background" />
    <TextView
        android:id="@+id/tv_iphost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F61004"
        android:fontFamily="@font/nimbusbol"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:text="ip host"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/et_user_login"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="2"
        android:background="@drawable/txt_btn_style1"
        android:drawableLeft="@drawable/ic_user"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="User"
        android:inputType="textPersonName"
        android:textColorHint="#F4CDCD"



        />

    <EditText
        android:id="@+id/et_user_password_login"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="2"
        android:background="@drawable/txt_btn_style1"
        android:drawableLeft="@drawable/ic_padlock"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#F4CDCD"


        />

    <Button
        android:id="@+id/buttonIngresar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="2"
        android:background="@drawable/btn_style3"
        android:text="@string/ingresar"
        android:textColor="@drawable/txt_btn_style3"




        />

    <Button
        android:id="@+id/buttonRegistrarse"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="2"
        android:background="@drawable/btn_style3"
        android:text="@string/registrarse"
        android:textColor="@drawable/txt_btn_style3"

        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="752dp"
        android:layout_height="123dp"

        android:layout_gravity="bottom|center|start|center_horizontal"
        android:background="@drawable/ic_wave" />

</LinearLayout>