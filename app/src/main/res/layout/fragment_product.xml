<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <ImageView
        android:id="@+id/img_restaurant_product_bg"
        android:layout_width="428dp"
        android:layout_height="127dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blackground_produc" />

    <TextView
        android:id="@+id/tv_restaurants"
        android:layout_width="420dp"
        android:layout_height="65dp"
        android:background="#FF0F03"
        android:fontFamily="@font/comickings"
        android:letterSpacing="0.1"
        android:padding="10dp"
        android:text="producto"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_restaurant_product_bg" />

    <ImageView
        android:id="@+id/img_restaurant_icon"
        android:layout_width="126dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/img_restaurant_product_bg"
        app:layout_constraintHorizontal_bias="0.408"
        app:layout_constraintStart_toStartOf="@+id/img_restaurant_product_bg"
        app:layout_constraintTop_toTopOf="@+id/img_restaurant_product_bg"
        app:srcCompat="@drawable/ic_deliveryman" />

    <Button
        android:id="@+id/btn_add_shopping_cart"
        android:layout_width="961dp"
        android:layout_height="67dp"
        android:background="@drawable/btn_style1"
        android:text="Agregar al carrito de compras"
        android:textColor="@color/blanco"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu_options_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="358dp"
        android:layout_height="23dp"
        android:fontFamily="@font/nimbusbol"
        android:text="Parrillada de tres carne  "
        android:textColor="@color/negro"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/tv_precio"
        android:layout_width="353dp"
        android:layout_height="31dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/nimbusbol"
        android:text="$ 20.000"
        android:textColor="@color/negro"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="355dp"
        android:layout_height="112dp"
        android:fontFamily="@font/nimbusregita"
        android:text="Carne de res, pechuga de pollo, costilla de cerdo, papa criolla, morcillas, chorizos, rodajas de plÃ¡tano, croquetas de yuca y papas a la francesa."
        android:textColor="@color/negro"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_precio" />

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="24dp"
        android:layout_height="25dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/icon_minus"
        app:layout_constraintStart_toStartOf="@+id/tv_precio"
        app:layout_constraintTop_toTopOf="@+id/tv_precio" />

    <TextView
        android:id="@+id/quantity_of_products"
        android:layout_width="40dp"
        android:layout_height="34dp"
        android:text="1"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/negro"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/btn_minus"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="24dp"
        android:layout_height="26dp"
        android:background="@drawable/icon_plus"
        app:layout_constraintStart_toEndOf="@+id/quantity_of_products"
        app:layout_constraintTop_toTopOf="@+id/btn_minus" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="358dp"
        android:layout_height="164dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/plato_parrillada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_restaurants" />
</androidx.constraintlayout.widget.ConstraintLayout>
