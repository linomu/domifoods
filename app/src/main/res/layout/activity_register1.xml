<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Register1Activity">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logoregister" />

    <Button
        android:id="@+id/buttonSiguiente"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_weight="3"
        android:background="@drawable/btn_style1"
        android:text="@string/siguiente"
        android:textColor="@drawable/txt_btn_style2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSiguiente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nimbusbol"
                android:gravity="center|center_vertical"
                android:scrollbarThumbHorizontal="@color/negro"
                android:scrollbarThumbVertical="@color/negro"
                android:text="@string/user_name"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editTextFN"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/sty_border_editext"
                android:drawablePadding="5dp"
                android:ems="10"
                android:fontFamily="@font/nimbusreg"
                android:textColorHint="@color/rojoClaro"
                android:hint="@string/user_name"
                android:inputType="textPersonName"
                android:drawableLeft="@drawable/ic_user3"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nimbusbol"
                android:gravity="center|center_vertical"
                android:scrollbarThumbHorizontal="@color/negro"
                android:scrollbarThumbVertical="@color/negro"
                android:text="@string/lastname_user"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editTextCorreo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/sty_border_editext"
                android:drawableLeft="@drawable/ic_user3"
                android:drawablePadding="5dp"
                android:ems="10"
                android:fontFamily="@font/nimbusreg"
                android:hint="@string/lastname_user"
                android:inputType="textPersonName"
                android:textColorHint="@color/rojoClaro" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nimbusbol"
                android:gravity="center|center_vertical"
                android:scrollbarThumbHorizontal="@color/negro"
                android:scrollbarThumbVertical="@color/negro"
                android:text="Tipo de Documento"
                android:textColor="#000000"

                />

            <Spinner
                android:id="@+id/editTextDir"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/sty_border_editext"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="5dp"
                android:ems="10"
                android:entries="@array/kind_of_id"
                android:fontFamily="@font/nimbusreg"
                android:hint="Tipo de Documento"
                android:inputType="textPersonName"
                android:textColorHint="@color/rojoClaro"

                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nimbusbol"
                android:gravity="center|center_vertical"
                android:scrollbarThumbHorizontal="@color/negro"
                android:scrollbarThumbVertical="@color/negro"
                android:text="Documento"
                android:textColor="#000000" />


            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/sty_border_editext"
                android:drawableLeft="@drawable/ic_user2"
                android:drawablePadding="5dp"
                android:ems="10"
                android:fontFamily="@font/nimbusreg"
                android:hint="@string/id_user"
                android:inputType="number"
                android:textColorHint="@color/rojoClaro"


                />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nimbusbol"
                android:gravity="center|center_vertical"
                android:scrollbarThumbHorizontal="@color/negro"
                android:scrollbarThumbVertical="@color/negro"
                android:text="Celular"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editTextConfPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/sty_border_editext"
                android:drawableLeft="@drawable/ic_cel"
                android:drawablePadding="5dp"
                android:ems="10"
                android:fontFamily="@font/nimbusreg"
                android:hint="@string/phone_user"
                android:inputType="phone"
                android:textColorHint="@color/rojoClaro" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>