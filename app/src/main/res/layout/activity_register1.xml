<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    tools:context=".Register1Activity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="295dp"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:scrollbarThumbHorizontal="@color/negro"
        android:scrollbarThumbVertical="@color/negro"
        android:text="Nombre"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextFN"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_weight="3"
        android:drawableLeft="@drawable/ic_user"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Nombre"
        android:textColorHint="@color/rojoClaro"
        android:inputType="textPersonName"
        android:background="@drawable/sty_border_editext"
        android:layout_marginBottom="15dp"

        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="299dp"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:text="Apellido"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextCorreo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_weight="3"
        android:drawableLeft="@drawable/ic_user"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Correo"
        android:textColorHint="@color/rojoClaro"
        android:inputType="textPersonName"
        android:background="@drawable/sty_border_editext"
        android:layout_marginBottom="15dp"

        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="295dp"
        android:layout_height="3dp"
        android:layout_weight="1"
        android:text="Tipo de Documento"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextDir"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_weight="3"
        android:drawableLeft="@drawable/ic_user"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Tipo de Documento"
        android:textColorHint="@color/rojoClaro"
        android:inputType="textPersonName"
        android:background="@drawable/sty_border_editext"
        android:layout_marginBottom="15dp"

        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="295dp"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:text="Documento"
        android:textColor="#000000" />


    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_weight="3"
        android:drawableLeft="@drawable/ic_padlock"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Número de Documento"
        android:textColorHint="@color/rojoClaro"
        android:inputType="textPersonName"
        android:background="@drawable/sty_border_editext"
        android:layout_marginBottom="15dp"

        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="302dp"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:text="Celular"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextConfPassword"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_weight="3"
        android:drawableLeft="@drawable/ic_padlock"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Número de Celular"
        android:textColorHint="@color/rojoClaro"
        android:inputType="textPassword"
        android:background="@drawable/sty_border_editext"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/buttonRegistrarse"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="100dp"
        android:layout_weight="3"
        android:background="@drawable/btn_style1"
        android:text="Siguiente"
        android:textColor="@drawable/txt_btn_style2"

        />


</LinearLayout>