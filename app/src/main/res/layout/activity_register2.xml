<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="295dp"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:scrollbarThumbHorizontal="@color/negro"
        android:scrollbarThumbVertical="@color/negro"
        android:text="Fecha de Nacimiento"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextFN"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_weight="3"
        android:drawableLeft="@drawable/ic_calendar"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="DD / MM / AA"
        android:textColorHint="@color/rojoClaro"
        android:inputType="textPersonName"
        android:background="@drawable/sty_border_editext"
        android:layout_marginBottom="15dp"

        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="299dp"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:text="Correo"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextCorreo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_weight="3"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Correo"
        android:textColorHint="@color/rojoClaro"
        android:inputType="textPersonName"
        android:background="@drawable/sty_border_editext"
        android:layout_marginBottom="15dp"

        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="295dp"
        android:layout_height="3dp"
        android:layout_weight="1"
        android:text="Dirección"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextDir"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_weight="3"
        android:drawableLeft="@drawable/ic_home"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Dirección"
        android:textColorHint="@color/rojoClaro"
        android:inputType="textPersonName"
        android:background="@drawable/sty_border_editext"
        android:layout_marginBottom="15dp"

        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:text="Genero"
        android:textColor="#000000" />

    <RadioGroup
        android:layout_width="302dp"
        android:layout_height="52dp"
        android:orientation="horizontal">

        >

        <RadioButton
            android:id="@+id/radio_masculino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:checked="true"
            android:text="Masculino"
            android:buttonTint="@color/rojo"
            />

        <RadioButton
            android:id="@+id/radio_femenino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Femenino"
            android:buttonTint="@color/rojo"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="295dp"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:text="Contraseña"
        android:textColor="#000000" />


    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_weight="3"
        android:drawableLeft="@drawable/ic_padlock"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Contraseña"
        android:textColorHint="@color/rojoClaro"
        android:inputType="textPersonName"
        android:background="@drawable/sty_border_editext"
        android:layout_marginBottom="15dp"

        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="302dp"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:text="Confirmar Contraseña"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextConfPassword"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_weight="3"
        android:drawableLeft="@drawable/ic_padlock"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Confirmar Contraseña"
        android:textColorHint="@color/rojoClaro"
        android:inputType="textPassword"
        android:background="@drawable/sty_border_editext"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/buttonRegistrarse"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="100dp"
        android:layout_weight="3"
        android:background="@drawable/btn_style1"
        android:text="Finalizar"
        android:textColor="@drawable/txt_btn_style2"

        />


</LinearLayout>